bar {
#    verbose yes
    status_command i3blocks -c ~/.config/i3blocks/primary.conf
    i3bar_command i3bar -t
    position bottom
    font pango:Hack, FontAwesome 11
    strip_workspace_numbers yes
#	➜❰❱❮❯
    separator_symbol "❰"
    bindsym button4 nop
    bindsym button5 nop
    output DFP5
    height 34
    colors {
        statusline         $white
        background         $transparent
        separator          $white

#                          BORDER       BACKGROUND   TEXT
        focused_workspace  $transparent $transparent $yellow
        inactive_workspace $transparent $transparent $white
        active_workspace   $transparent $transparent $white
        urgent_workspace   $darkred     $darkred     $black
        binding_mode       $transparent $transparent $yellow
    }
}
bar {
#    verbose yes
    status_command i3blocks -c ~/.config/i3blocks/secondary.conf
    i3bar_command i3bar -t
    position bottom
    font pango:Hack, FontAwesome 11
    strip_workspace_numbers yes
    separator_symbol "❰"
    bindsym button4 nop
    bindsym button5 nop
    output DFP10
    tray_output DFP10
    tray_padding 5
    height 34
    colors {
        statusline         $white
        background         $transparent
        separator          $white

#                          BORDER       BACKGROUND   TEXT
        focused_workspace  $transparent $transparent $yellow
        inactive_workspace $transparent $transparent $white
        active_workspace   $transparent $transparent $white
        urgent_workspace   $darkred     $darkred     $black
        binding_mode       $transparent $transparent $yellow
    }
}

